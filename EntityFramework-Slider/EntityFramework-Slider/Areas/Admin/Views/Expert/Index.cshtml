@model IEnumerable<Expert>
@{
    ViewData["Title"] = "SliderInfo";
}

<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>

            <tbody>
                @foreach (var expert in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/img/@expert.Image" style="width:70px;height:70px" alt="image" />
                        </td>

                        <td data-id="@expert.Id">
                            @*<p class=@(slider.SoftDelete ? "text-danger" : "text-success")>Status</p>*@
                            @if (expert.SoftDelete)
                            {
                                <div class="deActive-status slider-status"></div>
                            }
                            else
                            {
                                <div class="active-status slider-status"></div>
                            }


                        </td>
                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@expert.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@expert.Id">Edit</a>
                            <form style="display:inline-block" asp-action="Delete" asp-route-id="@expert.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

