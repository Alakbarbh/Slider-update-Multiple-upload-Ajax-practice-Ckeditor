@model Expert
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <h1> Slider detail</h1>
    <table class="table table-striped">
         <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                Name
            </th>
            <th>
                Profession
            </th>

        </tr>
    </thead>

        <tbody>

            <tr>

                <td class="py-1">
                    <img src="~/img/@Model.Image" />

                </td>

                <td class="py-1">
                    @Html.Raw(@Model.Name)

                </td>

                <td class="py-1">
                    @Model.Profession

                </td>

            </tr>


        </tbody>
    </table>


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>

