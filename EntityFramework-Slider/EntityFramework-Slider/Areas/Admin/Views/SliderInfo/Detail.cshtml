@model SliderInfo
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <h1> Slider detail</h1>
    <table class="table table-striped">
         <thead>
        <tr>
            <th>
                SignatureImage
            </th>
            <th>
                Title
            </th>
            <th>
                Description
            </th>

        </tr>
    </thead>

        <tbody>

            <tr>

                <td class="py-1">
                    <img src="~/img/@Model.SignatureImage" />

                </td>

                <td class="py-1">
                    @Html.Raw(@Model.Title)

                </td>

                <td class="py-1">
                    @Model.Description

                </td>

            </tr>


        </tbody>
    </table>
   
    
    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>

